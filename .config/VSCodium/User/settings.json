{
  // Editor
  "editor.fontFamily": "'UbuntuMono Nerd Font', 'Verdana', monospace, 'Droid Sans Fallback'",
  "editor.fontSize": 15,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "none",
  "workbench.editor.titleScrollbarSizing": "large",
  "workbench.activityBar.visible": true,
  "workbench.editor.wrapTabs": true,

  //  -> Icon Theme
  "workbench.iconTheme": "material-icon-theme",
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true
  },
  "files.insertFinalNewline": true,
  //  -> HTML
  "html.format.endWithNewline": true,
  "files.autoSaveDelay": 10000,
  "files.maxMemoryForLargeFilesMB": 1664,
  "files.trimFinalNewlines": true,

  //  -> Terminal
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.rightClickBehavior": "default",

  //  -> Language Specific Configurations
  "[v]": {
    "editor.defaultFormatter": "0x9ef.vscode-vlang",
    "editor.codeActionsOnSave": true
  },

  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },

  // Extensions
  "code-runner.runInTerminal": true,

  // Web Extensions
  //  -> Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  //  -> DARTJS Sass Compiler
  "dartsass.disableSourceMap": true,
  "dartsass.outputFormat": "cssonly",
  "dartsass.sassBinPath": "/usr/bin/sass",
  "dartsass.targetDirectory": "css",
  // SVG Previewer
  "svg.preview.mode": "svg",
  // Git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "prettier.trailingComma": "all",
  "sass.format.deleteWhitespace": false,
  "files.trimTrailingWhitespace": true,
  "livePugCompiler.savePath": "/",
  "workbench.colorTheme": "Edge Dark",
  "window.menuBarVisibility": "toggle",
  "dartsass.autoPrefixBrowsersList": ["> 1%", "last 10 versions"],
  "terminal.external.linuxExec": "kitty",
  "editor.wordWrap": "wordWrapColumn",
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "update.mode": "start",
  "editor.unicodeHighlight.nonBasicASCII": false,
  "C_Cpp.intelliSenseEngine": "Disabled",
  "pretty-formatter.commentLine": true,
  "pretty-formatter.disableLanguages": ["css", "sass", "scss"],
  "pretty-formatter.preserve": 1,
  "pretty-formatter.styleguide": "google",
  "scss.lint.compatibleVendorPrefixes": "warning",
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.float": "warning",
  "scss.lint.idSelector": "warning",
  "scss.lint.ieHack": "warning",
  "scss.lint.important": "error",
  "scss.lint.importStatement": "warning",
  "scss.lint.universalSelector": "warning",
  "scss.lint.unknownAtRules": "ignore",
  "scss.lint.boxModel": "warning",
  "scss.validate": false,
  "clangd.path": "/home/tux/.config/VSCodium/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/14.0.0/clangd_14.0.0/bin/clangd",
  "C_Cpp.autocomplete": "Disabled",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.gopath": "/home/tux/work/Learn/Go",
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "ltex.additionalRules.enablePickyRules": true,
  "ltex.completionEnabled": true,
  "ltex.additionalRules.motherTongue": "en-US",
  "terminal.integrated.fontFamily": "UbuntuMono Nerd Font",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.lineHeight": 1.125,
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.go$",
        "cmd": "golines ${file} -w"
      }
    ]
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "dartsass.disableCompileOnSave": true,
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.zoomLevel": 1,
  "files.autoSave": "afterDelay",
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "stylelint.snippet": [
    "css",
    "less",
    "postcss",
    "scss"
  ],
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "scss"
  ],
  "cmake.configureOnOpen": false,
  "editor.formatOnSave": true
}
